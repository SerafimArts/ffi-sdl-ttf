{
    "name": "serafim/ffi-sdl-ttf",
    "description": "SDL TTF FFI bindings for the PHP language",
    "type": "library",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/SerafimArts/ffi-sdl-ttf/issues",
        "source": "https://github.com/SerafimArts/ffi-sdl-ttf"
    },
    "keywords": ["sdl", "ffi", "bindings", "opengl", "graphics", "library", "ttf", "font"],
    "homepage": "https://github.com/SerafimArts/ffi-sdl-ttf",
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-ffi": "*",
        "ext-mbstring": "*",
        "ffi-headers/contracts": "^1.0",
        "ffi/env": "^1.0",
        "ffi/location": "^1.0",
        "ffi/preprocessor": "^0.2",
        "ffi/proxy": "^1.0",
        "ffi/work-directory": "^1.0",
        "psr/simple-cache": "^1.0|^2.0|^3.0",
        "serafim/ffi-sdl": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Serafim\\SDL\\TTF\\": "src"
        }
    },
    "require-dev": {
        "ffi/ide-helper-generator": "^0.1|^1.0",
        "friendsofphp/php-cs-fixer": "^3.65",
        "symfony/cache": "^5.4|^6.0|^7.0",
        "phpstan/phpstan": "^2.0.3",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "scripts": {
        "linter": "@linter:check",
        "linter:check": "phpstan analyse --configuration phpstan.neon",
        "linter:baseline": "phpstan analyse --configuration phpstan.neon --generate-baseline",
        "phpcs": "@phpcs:check",
        "phpcs:check": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --verbose --diff --dry-run",
        "phpcs:fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --verbose --diff"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev",
            "dev-main": "2.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
